/* pages/mine/mine.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #efefef;
}
.loginBox{
  height: 26%;
  background-color: #e3ecf1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.loginBox .title{
  font-size: 35rpx;
  color: #5b5a5a;
  margin-bottom: 35rpx;
}
.loginBox .button{
  font-size: 28rpx;
  padding: 24rpx 85rpx;
  background-color: #f19f3d;
  border-radius: 50rpx;
  color: #fff;
}
.goodsBox{
  height: 46%;
  padding: 0 37rpx;
  margin-bottom: 3%;
  background-color: #fff;
}
.goodsBox .myGoodsBox{
  height: 21%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e5e5e5;
}
.myGoodsBox .myGoods{
  font-size: 31rpx;
}
.myGoodsBox .allGoods{
  font-size: 25rpx;
  color: #b3b3b3;
}
.kindList image{
  width: 56rpx;
  height: 56rpx;
  display: block;
  background-color: #5b5a5a;
  margin-bottom: 32rpx;
}
.goodsBox .kindList{
  height: 79%;
  display: flex;
  flex-wrap: wrap;
}
.kindList .oneKind{
  height: 50%;
  width: calc(100% / 4);
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
}
.coupon{
  background-color: #fff;
  font-size: 31rpx;
  height: 20%;
  display: flex;
  flex-direction: column;
  padding: 0 37rpx;
}
.coupon .part{
  flex:1 0 auto;
  display: flex;
  align-items: center;
}
.part:first-child{
  border-bottom: 2rpx solid #e5e5e5;
}
.coupon .power{
  display: flex;
  justify-content: space-between;
}
.power text:last-child{
  font-size: 25rpx;
  color: #b3b3b3;
}
.service{
  color: #2e90d5;
  font-size: 27rpx;
  height: calc(100% - 26% - 46% - 3% - 20%);
  display: flex;
  align-items: center;
  justify-content: center;
}